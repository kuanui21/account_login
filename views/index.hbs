<div class="d-flex justify-content-center text-center mt-5">
  <div>
    <h1 class="mb-5">Account Login</h1>
    <form action="/" method="POST">
      <input type="email" class="form-control mb-3" name="email" id="inputEmail" placeholder="Email" required>
      <input type="password" class="form-control mb-3" name="password" id="inputPassword" placeholder="Password"
        required>
      <button type="submit" class="btn btn-outline-dark shadow-sm my-4">Sign in</button>

      {{#if isError}}
      <div class="alert alert-danger" role="alert">
        <span class="m-2" style="color: brown;">Username 或Password 錯誤</span>
      </div>
      {{/if}}
    </form>
  </div>
</div>